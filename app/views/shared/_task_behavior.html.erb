<div class="templateBlock">
  <div class="choice_text_template" style="display:none;">
     <div class="form-group">
        <%= text_field_tag nil,nil,placeholder: "#{t("val.task.maxscore")}",class: "s2 form-control pr-0" ,data: {numbertype: 1 } %>
     </div>  
  </div>
  <div class="choice_rating_template" style="display:none;">
      <div class="templateText2" style="display:none;">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text p-0">
                <a href="javascript:;" class="ratingRemove" onclick="ratingRemoveClick(this); return false;"><%= icon('fa',"times-circle" , class: "text-danger")%></a>
              </div>
            </div>
                  <%= text_field_tag nil,nil,class: "s1 form-control col-3 text-center p-0",data: {numbertype: 1 } ,:readonly => true%>
                  <%= text_field_tag nil,nil,placeholder: "#{t("val.task.ratingmean")}",class: "s2 form-control pr-0" ,data: {numbertype: 2 } %>
          </div>
    
      </div>
      <%= text_field_tag nil,nil,placeholder: "#{t("val.task.ratingscore")}",class: "behabiorRatingNew form-control pr-0" ,data: {numbertype: 1 } %>
      <div class="showTemplateSeleted"></div>
  </div>
  <script type="text/javascript">
          function ratingRemoveClick(elm){
            var rtblock = $(elm).closest(".result_block")
            $(elm).closest('.input-group').remove()
            var cchilde = rtblock.find(".showTemplateSeleted").children().length
            rtblock.find(".behabiorRatingNew").val(cchilde)
            rtblock.find(".showTemplateSeleted").children().each(function(index, element){
              $(element).find("input[data-numbertype=1]").val(cchilde  - index)  
            });
                
          }
    </script>
   <div class="choice_checklist_template" style="display:none;">
      <div class="templateText2" style="display:none;">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text p-0">
                <a href="javascript:;" onclick="$(this).closest('.input-group').remove(); return false;"><%= icon('fa',"times-circle" , class: "text-danger")%></a>
              </div>
            </div>
                  <%= text_field_tag nil,nil,class: "s1 form-control col-3 text-center p-0",placeholder: t("val.task.good"),data: {numbertype: 1 } %>
                  <%= text_field_tag nil,nil,class: "s2 form-control pr-0" ,placeholder: t("val.task.bad") ,data: {numbertype: 2 } %>
          </div>
    
      </div>
      <div class="showTemplateSeleted"></div>
      <a href="javascript:;" class="behabiorNew"><%= icon('fa',"plus-square")%></a> 
  </div>
</div>