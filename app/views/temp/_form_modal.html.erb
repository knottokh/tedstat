<div class="modal fade" id="form_modal">
  <%= simple_form_for @course, validate: true do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= "#{params[:action].titleize} User" %></h4>
      </div>
      <div class="modal-body">
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group">
               <%= f.input :couse_code, required: true, autofocus: true,placeholder: "" ,input_html: {class: "form-control" }%>
          </div>
          <div class="form-group">
               <%= f.input :couse_name, required: true,placeholder: "",input_html: {class: "form-control" } %>
          </div>
          <div class="form-group">
               <%= f.input :couse_year, required: true, autofocus: true,placeholder: "" ,input_html: {class: "form-control" }%>
          </div>
          <div class="form-group">
               <%= f.input :couse_detail, required: true,placeholder: "",input_html: {class: "form-control" } %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, class: 'submit btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
