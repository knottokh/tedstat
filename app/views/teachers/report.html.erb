<div class="card mb-3 bg-transparent border-0" id="teacher-report-container" data-currentpath="<%= current_class?(reportcourse_path)%>">
  <div class="card-body mb-3 bg-white bar-l-1 boder-green-sea">
      <%= form_tag reportcourse_path ,class: "row",:id => "from-select-room" do %>
          <div class="col-sm-6 form-inline border-right">
              <div class="row w-100 mb-2">
                  <div class="col">
                   <%= select_tag :year, options_for_select(@years.collect{|p| [p.couse_year, p.couse_year]}, selected: params[:year]),
                    prompt: "Select year", class: "form-control w-100" %>
                  </div>   
                  <div class="col-6">
                    <%= select_tag :course, options_for_select(@courses.collect{|p| [p.couse_name, p.id]}, selected: params[:course]),
                        prompt: "Select course", class: "form-control w-100" ,:disabled => @courses.empty? %>
                  </div>  
              </div>
          </div> 
          <div class="col-sm-6 form-inline">
              <div class="row w-100 mb-2">
                  <div class="col ml-4">
                    <%= select_tag :room, options_for_select(@rooms.collect{|p| [p.room_name, p.id]}, selected: params[:room]),
                        prompt: "Select room", class: "form-control w-100" ,:disabled => @rooms.empty? %>
                  </div>   
                  <div class="col-4">
                      <%= submit_tag "OK" ,id: "findcourse", :disabled => true,class: 'btn btn-info align-middle'%>
                  </div>  
              </div>     
          </div>      
      <% end %>
  </div>    
  <div class="card-body mb-3 p-1 bg-white bar-l-1 boder-belize-hole">
      <div id="graph-holder" class="col"></div>
  </div>
</div>